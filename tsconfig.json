{
  "compilerOptions": {
    /* Base */
    "baseUrl": ".",
    /* Language */
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react-jsx",
    /* Type Safety */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* Build */
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    /* Module Resolution */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    /* Path Aliases (THIS FIXES YOUR ISSUES) */
    "paths": {
      "@database/*": [
        "database/*"
      ],
      "@backend/*": [
        "backend/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    /* Next.js */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
